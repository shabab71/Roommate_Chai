@model IEnumerable<HomeRental.Models.RoomModel>
@{ 
    Layout = "_Layout";
}

<div class="controller">
    <h3>All Rooms</h3>
    <div class="row">
        @foreach (var room in Model)
            {
               <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></svg>
                        <div class="card-body">
                            <h1 class="card-title">@room.Title</h1>
                            <p class="card-text">@room.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/room/getroom/@room.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                                </div>
                                <small class="text-muted">@room.Owner</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
